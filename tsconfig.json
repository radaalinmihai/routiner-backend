{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
		"strict": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist",
		"baseUrl": ".",
		"types": ["node"],
		"lib": ["es2021"],
	},
	"ts-node": {
		"files": true
	},
	"exclude": ["node_modules", "migrations"],
	"include": ["app/**/*"]
}
