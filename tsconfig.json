{
	"compilerOptions": {
		"target": "ES2017",
		"module": "Node16",
		"moduleResolution": "node16",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "strict": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist",
		"baseUrl": ".",
		"types": ["node"],
		"lib": ["ES2020"],
        "allowJs": true
	},
	"ts-node": {
      "files": true
	},
	"exclude": ["node_modules", "migrations"],
	"include": ["app/**/*"],
}
